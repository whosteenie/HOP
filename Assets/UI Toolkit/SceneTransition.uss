.transition-overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgb(0, 0, 0);
    opacity: 0;
    transition-property: opacity;
    transition-duration: 0.5s;
    transition-timing-function: ease-in-out;
}

.transition-overlay.visible {
    opacity: 1;
}

.transition-overlay.hidden {
    opacity: 0;
    display: none;
}
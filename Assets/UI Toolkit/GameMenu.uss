/* ===== HUD ROOT ===== */
.hud {
    position: absolute;
    width: 100%; height: 100%;
    padding: 24px;
    flex-direction: column;
    justify-content: space-between;
}

.root-container-visibility {
    visibility: visible;
    display: none;
}

.hud-visibility-visible {
    visibility: visible;
}

/* Positions by ID */
#health-container { position: absolute; left: 30px; bottom: 30px; }
#multiplier-container { position: absolute; left: 50%; bottom: 30px; translate: -50% 0; }
#ammo-container { position: absolute; right: 30px; bottom: 30px; }

/* Stat containers */
.health-container, .multiplier-container, .ammo-container {
    flex-direction: row; align-items: center;
    min-height: 56px; padding: 10px 16px;
    border-radius: 4px; border-width: 1px;
    background-color: rgba(12, 12, 18, 0.85);
}

.health-container, .ammo-container {
    border-color: rgba(200,60,60,0.4);
    background-color: rgba(20, 10, 10, 0.85);
}
.multiplier-container {
    border-color: rgba(60,150,200,0.4);
    background-color: rgba(10, 15, 20, 0.85);
}

/* Bars */
.health-bar, .multiplier-bar {
    width: 180px; height: 22px; margin-right: 12px;
    border-radius: 4px; background-color: rgba(5, 5, 8, 0.8);
    border-width: 1px;
    border-color: rgba(200, 60, 60, 0.2);
}
.health-bar > .unity-progress-bar__progress { 
    background-color: rgb(200,60,60); 
    border-radius: 4px; 
}
.multiplier-bar > .unity-progress-bar__progress { 
    background-color: rgb(60,150,200); 
    border-radius: 4px; 
}

/* Values */
.health-value, .multiplier-value {
    color: white; font-size: 22px; -unity-font-style: bold; min-width: 60px; -unity-text-align: middle-right;
}
.ammo-text {
    color: white; font-size: 28px; -unity-font-style: bold; min-width: 48px; -unity-text-align: middle-center;
}
.ammo-slash { color: rgba(255,255,255,0.8); font-size: 22px; margin-left: 6px; margin-right: 6px; }

/* Crosshair */
.crosshair { 
    position: absolute; 
    width: 100%; 
    height: 100%; 
    align-items: center; 
    justify-content: center;
    top: 0; left: 0; bottom: 0; right: 0;
}
.crosshair-line { position: absolute; background-color: rgb(200,60,60); }
.crosshair-line.horizontal { width: 18px; height: 2px; }
.crosshair-line.vertical   { width: 2px; height: 18px; }

.grapple-indicator { 
    position: absolute;
    width: 50px;
    height: 50px;
}

/* Pause / Options */
.menu-container { width: 420px; padding: 28px; }
.options-container { width: 760px; max-height: 80%; padding: 36px; }

.pause-header {
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    margin-bottom: 18px;
}

.pause-join-code-display {
    flex-direction: row;
    align-items: center;
}

.pause-join-code-label {
    margin-right: 8px;
}

.pause-join-code-label-inline {
    min-width: auto;
    width: auto;
    min-height: auto;
    margin-right: 0;
    margin-left: 0;
    padding-right: 0;
    font-size: 14px;
}

.copy-button {
    width: 36px;
    min-width: 36px;
    padding-left: 0;
    padding-right: 0;
    align-items: center;
    justify-content: center;
}

.copy-icon {
    width: 20px;
    height: 20px;
    margin: auto;
    --unity-image: url('/Assets/UI Toolkit/Images/copy.png');
}


/* ===== KILL FEED ===== */

.kill-feed-container {
    position: absolute;
    top: 30px;
    right: 30px;
    width: 350px;
    flex-direction: column;
    align-items: flex-end;
    justify-content: flex-start;
}

.kill-entry {
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    padding: 8px 12px;
    margin-bottom: 6px;
    border-radius: 4px;
    background-color: rgba(12, 12, 18, 0.9);
    border-width: 1px;
    border-color: rgba(200, 60, 60, 0.2);
    opacity: 1;
    transition-property: opacity, translate;
    transition-duration: 0.5s;
    transition-timing-function: ease-out;
}

.kill-entry-local {
    background-color: rgba(200, 60, 60, 0.25);
    border-color: rgba(255, 100, 100, 0.4);
}

.kill-entry-fade {
    opacity: 0;
}

.killer-name {
    font-size: 14px;
    color: rgb(240, 240, 240);
    -unity-font-style: bold;
    margin-right: 8px;
    -unity-text-align: middle-right;
}

.killer-name-local {
    color: rgb(255, 200, 100);
}

.kill-icon {
    width: 20px;
    height: 20px;
    min-width: 20px;
    margin-left: 6px;
    margin-right: 6px;
    -unity-background-scale-mode: scale-to-fit;
}

.victim-name {
    font-size: 14px;
    color: rgb(180, 180, 180);
    margin-left: 8px;
    -unity-text-align: middle-left;
}

/* ===== DAMAGE VIGNETTE ===== */

.damage-vignette-container {
    position: absolute;
    left: 0; right: 0;
    top: 0; bottom: 0;
}

.damage-vignette {
    position: absolute;
    background-color: rgba(200, 60, 60, 0.9);
    opacity: 0; /* Controlled by DamageVignetteUI script */
}

.corner {
    position: absolute;
    width: 12%;
    height: 12%;
    opacity: 0; /* Controlled by DamageVignetteUI script */
}

.corner-c-inline {
    width: 35px;
    height: 35px;
    background-color: rgba(200, 60, 60, 0.9);
}

.corner-c-position-absolute-right-0 {
    position: absolute;
    right: 0;
    width: 35px;
    height: 35px;
    background-color: rgba(200, 60, 60, 0.9);
}

.corner-c-position-absolute-bottom-0-left-0 {
    background-color: rgba(200, 60, 60, 0.9);
    width: 35px;
    height: 35px;
    bottom: 0;
    left: 0;
    position: absolute;
}

.corner-c-position-absolute-bottom-0-right-0 {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 35px;
    height: 35px;
    background-color: rgba(200, 60, 60, 0.9);
}

.corner-h-inline {
    width: 150px;
    height: 35px;
    left: 35px;
}

.corner-h-inline-right-35px {
    right: 35px;
    left: auto;
    width: 150px;
    height: 35px;
}

.corner-h-inline-left-35px {
    width: 150px;
    height: 35px;
    left: 35px;
}

.corner-h-inline-left-auto-right-35px {
    left: auto;
    right: 35px;
    width: 150px;
    height: 35px;
}

.corner-v-inline {
    width: 35px;
    height: 150px;
    top: 35px;
}

.corner-v-inline-top-35px-bottom-auto {
    top: 35px;
    bottom: auto;
    width: 35px;
    height: 150px;
}

.corner-v-inline-bottom-35px-top-auto {
    bottom: 35px;
    width: 35px;
    height: 150px;
    top: auto;
    left: auto;
}

.corner-v-inline-bottom-35px-top-auto-right {
    bottom: 35px;
    top: auto;
    width: 35px;
    height: 150px;
}

#hit-front {
    left: 30%;
    right: 30%;
    top: 0;
    height: 3%;
}

#hit-back {
    left: 30%;
    right: 30%;
    bottom: 0;
    height: 3%;
}

#hit-left {
    left: 0;
    top: 30%;
    bottom: 30%;
    width: 3%;
}

#hit-right {
    right: 0;
    top: 30%;
    bottom: 30%;
    width: 3%;
}


#hit-frontLeft {
    left: 0;
    top: 0;
}

#hit-frontRight {
    right: 0;
    top: 0;
}

#hit-backLeft {
    left: 0;
    bottom: 0;
}

#hit-backRight {
    right: 0;
    bottom: 0;
}

.corner-h {
    position: absolute;
    left: 0;
    right: 40%;
    top: 0;
    height: 3%;
    background-color: rgba(200, 60, 60, 0.9);
}

.corner-v {
    position: absolute;
    top: 0;
    bottom: 40%;
    left: 0;
    width: 3%;
    background-color: rgba(200, 60, 60, 0.9);
}

#hit-frontRight > .corner-h,
#hit-backRight > .corner-h {
    left: 40%;
    right: 0;
}

#hit-frontRight > .corner-v,
#hit-backRight > .corner-v {
    left: auto;
    right: 0;
}

#hit-backLeft > .corner-h,
#hit-backRight > .corner-h {
    top: auto;
    bottom: 0;
}

#hit-backLeft > .corner-v,
#hit-backRight > .corner-v {
    top: 40%;
    bottom: 0;
}


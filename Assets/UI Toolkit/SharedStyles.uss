/* ===== GLOBAL RESET ===== */
* {
    color: rgb(240, 240, 240);
    -unity-font-style: normal;
}

/* ===== UTILITY CLASSES ===== */
.hidden {
    display: none;
}

.full-abs {
    position: absolute;
    width: 100%;
    height: 100%;
}

.center-xy {
    align-items: center;
    justify-content: center;
}

/* ===== LAYOUT COMPONENTS ===== */
.ui-overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(5, 5, 8, 0.88);
}

.panel {
    background-color: transparent;
}

.card {
    background-color: rgba(12, 12, 18, 0.96);
    border-radius: 4px;
    border-width: 1px;
    border-color: rgba(200, 60, 60, 0.2);
    /* Subtle inner glow effect via border */
}

/* ===== TYPOGRAPHY ===== */
.title {
    -unity-font-style: bold;
    color: rgb(255, 255, 255);
    letter-spacing: 2px;
    margin-bottom: 10px;
    font-size: 32px;
    text-shadow: 0 0 8px rgba(200, 60, 60, 0.3);
}

.title-xl {
    font-size: 100px;
    text-shadow: 0 0 12px rgba(200, 60, 60, 0.4);
}

.section {
    margin-top: 14px;
    margin-bottom: 18px;
}

.section-title {
    font-size: 18px;
    -unity-font-style: bold;
    color: rgb(220, 220, 220);
    padding-bottom: 6px;
    border-bottom-width: 1px;
    border-bottom-color: rgba(200, 60, 60, 0.3);
}

/* Remove border from playerlist title */
#playerlist-label {
    border-bottom-width: 0;
    border-bottom-color: transparent;
    padding-bottom: 0;
}

.accent {
    color: rgb(255, 100, 100);
}

/* ===== FORM ELEMENTS ===== */
.setting-row {
    flex-direction: row;
    align-items: center;
    min-height: 32px;
    margin-bottom: 12px;
}

.setting-label {
    flex-grow: 1;
    font-size: 14px;
    min-width: 180px;
    color: rgb(220, 220, 220);
}

.value-label {
    font-size: 14px;
    color: rgb(180, 180, 180);
    min-width: 60px;
    -unity-text-align: middle-right;
    margin-left: 10px;
}

.value-label.accent {
    color: rgb(255, 100, 100);
}

/* Value input fields (volume and sensitivity) */
.value-input {
    font-size: 14px;
    color: rgb(240, 240, 240);
    min-width: 60px;
    max-width: 80px;
    -unity-text-align: middle-right;
    margin-left: 10px;
    background-color: transparent;
    border-width: 0;
    --unity-cursor-color: rgb(240, 240, 240);
}

/* Sensitivity input - fixed width to prevent growing */
.value-input.sensitivity-input {
    max-width: 60px;
    width: 60px;
}

.value-input:focus {
    --unity-cursor-color: rgb(240, 240, 240);
}

.value-input > .unity-base-text-field__input {
    --unity-cursor-color: rgb(240, 240, 240);
    background-color: transparent;
    border-width: 0;
}

.value-input:focus > .unity-base-text-field__input {
    --unity-cursor-color: rgb(240, 240, 240);
}

.value-input > .unity-text-element--inner-input-field-component {
    --unity-cursor-color: rgb(240, 240, 240);
    color: rgb(240, 240, 240);
}

.value-input:focus > .unity-text-element--inner-input-field-component {
    --unity-cursor-color: rgb(240, 240, 240);
}

/* ===== UNSAVED CHANGES DIALOG ===== */
.unsaved-changes-modal {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.95); /* More opaque background for modals */
}

.unsaved-changes-container {
    width: 450px;
    padding: 32px;
    flex-direction: column;
    align-items: center;
}

/* Hide the unsaved changes title */
#unsaved-changes-title {
    display: none;
}

.unsaved-changes-message {
    font-size: 16px;
    color: rgb(220, 220, 220);
    margin-top: 12px;
    margin-bottom: 24px;
    -unity-text-align: middle-center;
}

.unsaved-changes-buttons {
    flex-direction: row;
    width: 100%;
    justify-content: center;
}

.unsaved-changes-yes {
    margin-right: 12px;
}

.unsaved-changes-no {
    margin-left: 12px;
    margin-right: 12px;
}

.unsaved-changes-cancel {
    margin-left: 12px;
}

/* ===== QUIT CONFIRMATION DIALOG ===== */
/* Reuses unsaved-changes-modal styles, but with different button layout */
#quit-confirmation-title {
    display: none;
}

.quit-confirmation-buttons {
    flex-direction: row;
    width: 100%;
    justify-content: center;
}

.quit-confirmation-yes {
    margin-right: 12px;
}

.quit-confirmation-no {
    margin-left: 12px;
}

/* ===== LOBBY LEAVE DIALOG ===== */
/* Reuses unsaved-changes-modal styles, but with different button layout */
#lobby-leave-title {
    display: none;
}

.lobby-leave-buttons {
    flex-direction: row;
    width: 100%;
    justify-content: center;
}

.lobby-leave-yes {
    margin-right: 12px;
}

.lobby-leave-no {
    margin-left: 12px;
}

.setting-toggle {
    margin-left: auto;
    width: 20px;
    height: 20px;
    min-width: 20px;
    min-height: 20px;
    max-width: 20px;
    max-height: 20px;
    padding: 0;
    margin: 0;
    background-color: rgba(20, 20, 25, 0.9);
    border-radius: 4px;
    border-width: 1px;
    border-color: rgba(200, 60, 60, 0.3);
    -unity-background-image-tint-color: rgba(20, 20, 25, 0.9);
    -unity-slice-left: 0;
    -unity-slice-right: 0;
    -unity-slice-top: 0;
    -unity-slice-bottom: 0;
    transition-duration: 0.2s;
    /* Ensure no background image in unchecked state */
    background-image: none;
    background-size: 12px 12px;
    background-repeat: no-repeat;
    background-position: center;
}

.setting-toggle:hover {
    border-color: rgba(255, 100, 100, 0.5);
    background-color: rgba(25, 25, 30, 0.9);
    -unity-background-image-tint-color: rgba(25, 25, 30, 0.9);
    /* Ensure no background image in unchecked hover state */
    background-image: none;
    background-size: 12px 12px;
}

/* Checked state - show red background and white checkmark */
.setting-toggle.checked {
    background-color: rgba(200, 60, 60, 0.4);
    border-color: rgba(255, 100, 100, 0.6);
    background-image: url('/Assets/UI Toolkit/Images/checkmark.png');
    -unity-background-image-tint-color: rgb(255, 255, 255);
    background-size: 12px 12px;
    background-repeat: no-repeat;
    background-position: center;
}

.setting-toggle.checked:hover {
    background-color: rgba(200, 60, 60, 0.5);
    border-color: rgba(255, 100, 100, 0.8);
    -unity-background-image-tint-color: rgb(255, 255, 255);
    background-size: 12px 12px;
}

/* Completely remove default dropdown styling and apply custom */
.setting-dropdown {
    background-color: rgba(20, 20, 25, 0.9);
    border-width: 1px;
    border-color: rgba(200, 60, 60, 0.3);
    border-radius: 4px;
    padding: 4px 8px;
    width: 40%;
    min-width: 40%;
    max-width: 40%;
    color: rgb(240, 240, 240);
    min-height: 24px;
    -unity-background-image-tint-color: rgba(20, 20, 25, 0.9);
    overflow: hidden;
    text-overflow: ellipsis;
}

.setting-dropdown:hover {
    border-color: rgba(255, 100, 100, 0.5);
    background-color: rgba(25, 25, 30, 0.9);
    -unity-background-image-tint-color: rgba(25, 25, 30, 0.9);
}

/* Dropdown input - remove inner white border and default styling */
.setting-dropdown > .unity-base-dropdown__input,
.setting-dropdown .unity-base-dropdown__input {
    background-color: transparent;
    border-width: 0;
    border-color: transparent;
    color: rgb(240, 240, 240);
    padding: 0;
    margin: 0;
    -unity-background-image-tint-color: transparent;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* Dropdown arrow - equilateral triangle matching gamemode arrow */
.setting-dropdown > .unity-base-popup-field__arrow,
.setting-dropdown .unity-base-popup-field__arrow {
    width: 0;
    height: 0;
    min-width: 0;
    min-height: 0;
    border-left-width: 7px;
    border-left-color: transparent;
    border-right-width: 7px;
    border-right-color: transparent;
    border-bottom-width: 12px;
    border-bottom-color: rgb(255, 100, 100);
    border-top-width: 0;
    margin-left: 8px;
    margin-right: 4px;
    background-color: transparent;
    -unity-background-image-tint-color: transparent;
}

.setting-dropdown > .unity-base-popup-field__arrow.down,
.setting-dropdown .unity-base-popup-field__arrow.down {
    border-bottom-width: 0;
    border-top-width: 12px;
    border-top-color: rgb(255, 100, 100);
}

/* ===== KEYBIND BUTTONS ===== */
.keybind-button {
    margin-left: 8px;
    width: 120px;
    min-width: 120px;
    max-width: 120px;
    height: 32px;
    min-height: 32px;
    padding: 6px 12px;
    background-color: rgba(20, 20, 25, 0.9);
    border-radius: 4px;
    border-width: 1px;
    border-color: rgba(200, 60, 60, 0.3);
    color: rgb(220, 220, 220);
    font-size: 13px;
    -unity-text-align: middle-center;
    transition-duration: 0.2s;
}

.keybind-button:hover {
    border-color: rgba(255, 100, 100, 0.5);
    background-color: rgba(25, 25, 30, 0.9);
    color: rgb(240, 240, 240);
}

.keybind-button:active {
    border-color: rgba(255, 100, 100, 0.7);
    background-color: rgba(30, 30, 35, 0.9);
}

/* ===== SCROLLBAR STYLING ===== */
/* Hide scrollbar arrows (up/down buttons) - using correct Unity class names */
.unity-scroller__low-button,
.unity-scroller__high-button,
ScrollView .unity-scroller__low-button,
ScrollView .unity-scroller__high-button {
    display: none;
    width: 0;
    height: 0;
    min-width: 0;
    min-height: 0;
    max-width: 0;
    max-height: 0;
    visibility: hidden;
}

/* Add margin-right to content to create space between content and scrollbar */
.options-content {
    margin-right: 16px;
}

ScrollView .unity-scroll-view__horizontal-scrollbars,
.unity-scroll-view__horizontal-scrollbars {
    margin-bottom: 12px;
}

/* Dropdown styling - simplified */
.unity-base-popup-field__menu,
.unity-popup-field__menu {
    background-color: rgba(12, 12, 18, 1.0);
    border-radius: 4px;
    border-width: 1px;
    border-color: rgba(200, 60, 60, 0.3);
    padding: 6px 0;
}

.unity-base-dropdown__item {
    background-color: rgba(20, 20, 25, 0.9);
    border-radius: 4px;
    border-width: 1px;
    border-color: rgba(200, 60, 60, 0.2);
    margin: 2px 6px;
    padding: 6px 12px;
    color: rgb(240, 240, 240);
    min-height: 32px;
}

.unity-base-dropdown__item:hover {
    background-color: rgba(30, 30, 35, 0.9);
    border-color: rgba(255, 100, 100, 0.4);

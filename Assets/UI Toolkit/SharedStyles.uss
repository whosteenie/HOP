}

.unity-base-dropdown__item:active {
    background-color: rgba(200, 60, 60, 0.3);
}

.setting-slider {
    flex-grow: 1;
    max-width: 320px;
    height: 20px;
    min-height: 20px;
}

/* Slider track (background) */
.setting-slider > .unity-base-slider__tracker {
    background-color: rgba(20, 20, 25, 0.9);
    border-width: 1px;
    border-color: rgba(200, 60, 60, 0.3);
    border-radius: 4px;
    height: 6px;
    -unity-background-image-tint-color: rgba(20, 20, 25, 0.9);
    -unity-slice-left: 0;
    -unity-slice-right: 0;
    -unity-slice-top: 0;
    -unity-slice-bottom: 0;
}

/* Slider fill (filled portion) - red progress bar extending to dragger */
.setting-slider > .unity-base-slider__fill {
    background-color: rgb(255, 100, 100);
    border-radius: 4px;
    height: 6px;
    -unity-background-image-tint-color: rgb(255, 100, 100);
    -unity-slice-left: 0;
    -unity-slice-right: 0;
    -unity-slice-top: 0;
    -unity-slice-bottom: 0;
}

/* Slider dragger (handle) */
.setting-slider > .unity-base-slider__dragger {
    background-color: rgb(255, 100, 100);
    border-radius: 50%;
    border-width: 2px;
    border-color: rgba(255, 255, 255, 0.3);
    width: 16px;
    height: 16px;
    min-width: 16px;
    min-height: 16px;
    max-width: 16px;
    max-height: 16px;
    -unity-background-image-tint-color: rgb(255, 100, 100);
    -unity-slice-left: 0;
    -unity-slice-right: 0;
    -unity-slice-top: 0;
    -unity-slice-bottom: 0;
    transition-duration: 0.15s;
}

/* Dragger hover state */
.setting-slider > .unity-base-slider__dragger:hover {
    background-color: rgb(255, 120, 120);
    border-color: rgba(255, 255, 255, 0.5);
    width: 18px;
    height: 18px;
    min-width: 18px;
    min-height: 18px;
    max-width: 18px;
    max-height: 18px;
}

/* Dragger active/pressed state */
.setting-slider > .unity-base-slider__dragger:active {
    background-color: rgb(200, 60, 60);
    border-color: rgba(255, 255, 255, 0.4);
}

/* Remove default Unity slider styling */
.unity-base-slider {
    background-color: transparent;
    -unity-background-image-tint-color: transparent;
}

.unity-base-slider__tracker {
    background-color: rgba(20, 20, 25, 0.9);

.options-tab,
.options-tab > .unity-text-element {
    color: rgb(180, 180, 180);
}

.options-tab-hover,
.options-tab-hover > .unity-text-element {
    color: rgb(240, 240, 240);
}

.options-tab-hover {
    border-bottom-color: rgba(200, 60, 60, 0.5);
}

.options-tab-active,
.options-tab-active > .unity-text-element {
    color: rgb(255, 100, 100);
}

.options-tab-active {
    border-bottom-color: rgb(255, 100, 100);
}

.options-content-scroll {
    flex-grow: 1;
    min-height: 300px;
    max-height: 550px;
    height: 550px;
    margin-bottom: 20px;
    border-top-width: 1px;
    border-top-color: rgba(200, 60, 60, 0.3);
    border-bottom-width: 1px;
    border-bottom-color: rgba(200, 60, 60, 0.3);
}

/* Hide scrollbar arrows specifically for options content scroll */
.options-content-scroll .unity-scroller__low-button,
.options-content-scroll .unity-scroller__high-button {
    display: none;
    width: 0;
    height: 0;
    min-width: 0;
    min-height: 0;
    max-width: 0;
    max-height: 0;
    visibility: hidden;
}

/* Scrollbar track styling - make border reach top and bottom */
.options-content-scroll .unity-scroll-view__vertical-scrollbars,
.options-content-scroll .unity-scroll-view__vertical-scroller {
    /* Ensure track reaches full height */
}

/* Scrollbar thumb (draggable bar) - uniform padding */
.options-content-scroll .unity-scroller__slider,
.options-content-scroll .unity-scroller__vertical-slider {
    margin: 4px;
}

.options-content {
    flex-direction: column;
    padding: 10px 0;
    margin-right: 16px;
}

.options-tab-content {
    flex-direction: column;
    width: 100%;
}

/* ===== OPTIONS CONTAINER ===== */
.options-container {
    height: 85%;
    min-height: 85%;
    max-height: 85%;
    overflow: hidden;
}


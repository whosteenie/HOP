/* ===== TOAST ===== */
.toast-container {
    position: absolute;
    left: 50%;
    bottom: 80px;
    translate: -50% 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.toast {
    background-color: rgba(15, 15, 20, 0.95);
    color: #ffffff;
    font-size: 16px;
    padding: 12px 24px;
    border-radius: 4px;
    border-width: 1px;
    border-color: rgba(200, 60, 60, 0.3);
    opacity: 0;
    transition-duration: 0.3s;
    transition-property: opacity, translate;
    transition-timing-function: ease-out;
}

.toast-bold {
    -unity-text-outline-color: rgba(0,0,0,0.8);
    -unity-text-outline-width: 1px;
}

.toast.show  {
    opacity: 1;
    translate: 0 0;
}
.toast.hide  {
    opacity: 0;
    translate: 0 -20px;
}


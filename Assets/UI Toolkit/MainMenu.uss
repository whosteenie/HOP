/* ===== LANDING ===== */

#main-menu-panel { /* already uses .panel .full-abs */ }

.main-title {
    position: absolute; top: 12%; left: 8%;
}

.main-actions {
    position: absolute; left: 8%; bottom: 10%;
    flex-direction: column;
}

/* Text-only buttons with red accent */
.text-button {
    background-color: rgba(0,0,0,0); border-width: 0;
    color: rgb(240,240,240);
    font-size: 28px; -unity-font-style: bold; -unity-text-align: middle-left;
    padding: 6px 0;
    transition-duration: 0.2s;
}
.text-button:hover  { 
    color: rgb(255,100,100); 
    text-shadow: 0 0 8px rgba(255, 100, 100, 0.4);
}
.text-button:active { color: rgb(200,60,60); }

.menu-entry { flex-direction: row; align-items: center; margin-bottom: 8px; }
.menu-diamond {
    width: 10px; height: 10px; min-width: 10px; min-height: 10px;
    margin-right: 12px; background-color: rgb(200,60,60); rotate: 45deg;
}

/* ===== GAMEMODE ===== */

.gamemode-container {
    width: 1100px; height: 550px;
    padding: 26px;
}

.gamemode-grid {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-left: 18px;
    margin-right: 18px;
}

.gamemode-card {
    width: 310px; min-height: 360px; align-items: center;
    background-color: rgba(15, 15, 20, 0.95);
    border-radius: 4px; border-width: 1px; border-color: rgba(200, 60, 60, 0.2);
    padding: 14px;
    margin-bottom: 18px;
    transition-duration: 0.2s;
}

.gamemode-card:hover {
    border-color: rgba(255, 100, 100, 0.4);
    background-color: rgba(20, 20, 25, 0.95);
}

.gamemode-image {
    width: 260px; height: 210px;
    background-color: rgba(10, 10, 15, 0.8);
    border-radius: 4px; margin-bottom: 12px;
    margin-top: 8px;
    border-width: 1px;
    border-color: rgba(200, 60, 60, 0.15);
}

.gamemode-title {
    color: white; font-size: 18px; -unity-font-style: bold; -unity-text-align: middle-center;
    margin-top: 6px; margin-bottom: 12px;
}

/* ===== LOBBY ===== */

.lobby-container {
    width: 900px; min-height: 440px;
    padding: 26px;
}

.lobby-container-width-866px {
    width: 866px;
}

.lobby-status {
    color: rgb(180,180,180); font-size: 16px; margin-top: 6px; margin-bottom: 16px;
    -unity-text-align: middle-left;
}

/* ===== GAMEMODE DROPDOWN ===== */

.gamemode-dropdown-container {
    position: relative;
    flex-direction: row;
    align-items: center;
    margin-bottom: 18px;
}

.gamemode-display {
    margin-bottom: 0;
    transition-duration: 0.2s;
}

.gamemode-display.gamemode-hover {
    color: rgb(255, 100, 100);
}

.gamemode-display.gamemode-clicked {
    color: rgb(200, 60, 60);
}

.gamemode-arrow {
    width: 0;
    height: 0;
    border-left-width: 7px;
    border-left-color: transparent;
    border-right-width: 7px;
    border-right-color: transparent;
    border-bottom-width: 12px;
    border-bottom-color: rgb(255, 100, 100);
    border-top-width: 0;
    margin-left: 12px;
    margin-bottom: 0;
    margin-top: 0;
    opacity: 0;
    translate: -20px 0;
    transition-duration: 0.2s;
    transition-property: opacity, translate, border-bottom-width, border-top-width, border-bottom-color, border-top-color;
    transition-timing-function: ease-out;
    align-self: center;
    position: relative;
    top: 0;
}

.gamemode-arrow.arrow-slide-in {
    opacity: 1;
    translate: 0 0;
    transition-duration: 0.3s;
    transition-property: opacity, translate;
    transition-timing-function: ease-out;
}

.gamemode-arrow.arrow-down {
    border-bottom-width: 0;
    border-top-width: 12px;
    border-top-color: rgb(255, 100, 100);
    top: 2px;
}

.gamemode-dropdown-menu {
    position: absolute;
    flex-direction: column;
    background-color: rgba(12, 12, 18, 1.0);
    border-radius: 4px;
    border-width: 1px;
    border-color: rgba(200, 60, 60, 0.3);
    padding: 10px 16px;
    min-width: 280px;
}

.gamemode-dropdown-menu-styled {
    min-width: 270px;
    padding-right: 10px;
    padding-left: 10px;
}

.gamemode-option {
    width: 100%;
    height: 40px;
    background-color: rgba(20, 20, 25, 0.9);
    border-radius: 4px;
    border-width: 1px;
    border-color: rgba(200, 60, 60, 0.2);
    margin-bottom: 6px;
    color: rgb(240, 240, 240);
    font-size: 16px;
    -unity-font-style: normal;
    -unity-text-align: middle-center;
    padding-left: 12px;
    padding-right: 12px;
    transition-duration: 0.2s;
}

.gamemode-option:hover {
    background-color: rgba(30, 30, 35, 0.9);
    border-color: rgba(255, 100, 100, 0.4);
    color: rgb(255, 100, 100);
}

.gamemode-option:active {
    background-color: rgba(200, 60, 60, 0.3);
}

.gamemode-option-styled {
    width: auto;
    height: auto;
    -unity-text-align: middle-left;
}

.lobby-body { flex-direction: row; }
.lobby-left { margin-right: 30px; width:203px; }
.lobby-left-width-420px {
    margin-right: 25px;
    width: 420px;
}
.lobby-right { margin-right: 0; min-width: 500px; width: 539px; }

/* Hide the "Join with Code:" label */
#join-label {
    display: none;
}

.join-code-container {
    margin-top: 8px; margin-bottom: 12px; padding: 12px;
    background-color: rgba(10, 10, 15, 0.6); border-radius: 4px;
    border-width: 1px;
    border-color: rgba(200, 60, 60, 0.2);
}

.join-code-display {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-grow: 1;
    justify-content: flex-end;
}

.join-code-display-flex-start {
